<section class="py-8 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for feature in features %}
        <div class="bg-white p-6 rounded-2xl shadow-sm hover:shadow-md transition-shadow">
          <div class="{{ feature.color }} w-12 h-12 rounded-xl flex items-center justify-center mb-4">
            <img src="/assets/icons/{{ feature.icon }}" alt="" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ feature.title }}</h3>
          <p class="text-sm text-gray-600 leading-relaxed">{{ feature.desc }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>