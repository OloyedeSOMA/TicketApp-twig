{
  "name": "hng/ticket-manager-pro",
  "require": {
    "php": "^8.1",
    "twig/twig": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "npx tailwindcss -i ./src/input.css -o ./public/assets/css/tailwind.css --minify"
    ]
  },
  "config": {
    "optimize-autoloader": true
  }
}
